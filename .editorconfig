# https://EditorConfig.org
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# 4 space indentation
indent_style = space
indent_size = 2
# Set default charset
charset = utf-8
# Generally trim trailing whitespace
trim_trailing_whitespace = true

[*.{diff,md}]
# Don't trim trailing whitespace in MD and diff files
trim_trailing_whitespace = false
